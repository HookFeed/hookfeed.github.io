<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title><%= current_page.data.title || "HookFeed" %></title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Always force latest IE rendering engine or request Chrome Frame -->
  <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

  <%= stylesheet_link_tag  "application" %>
  <%= javascript_include_tag  "application" %>

  <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
  <!--[if lt IE 9]>
    <script src="../assets/js/html5shiv.js"></script>
  <![endif]-->

  <!-- TypeKit -->
  <script type="text/javascript" src="//use.typekit.net/qee5bpm.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

  <%= partial 'partials/mixpanel' %>
  <script type='text/javascript'>
    mixpanel.track('Viewed Home Page');
  </script>
</head>

<body id="page_layout" class="<%= page_classes %>">
  <section id="header_bar_banner">
    <div id="header_bar" class="container">
      <div class="sixteen columns">
        <div id="logo">
          <%= link_to '<img src="https://s3.amazonaws.com/HookFeed/hookfeed_logo_retina.png" width="130" height="24">', '/' %>
        </div>
        <nav>
          <%= link_to 'Pricing/Start Free Trial', '/#pricing_banner', id: "trial_button" %>
          <%= link_to 'Blog', '/blog' %>
          <%= link_to 'Login', 'https://secure.hookfeed.com/login' %>
        </nav>
      </div><!-- END .sixteen.columns -->
    </div><!-- END #header_bar.container -->
  </section><!-- END #header_bar_banner -->

  <%= yield %>

  <% unless development? %>
    <!-- Crazy Egg -->
    <script type="text/javascript">
      setTimeout(function(){var a=document.createElement("script");
      var b=document.getElementsByTagName("script")[0];
      a.src=document.location.protocol+"//dnn506yrbagrg.cloudfront.net/pages/scripts/0022/1949.js?"+Math.floor(new Date().getTime()/3600000);
      a.async=true;a.type="text/javascript";b.parentNode.insertBefore(a,b)}, 1);
    </script>

    <!-- Google Analytics -->
    <script type="text/javascript">
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-40298732-1']);
      _gaq.push(['_setDomainName', 'hookfeed.com']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    </script>
    <!-- END Google Analytics -->

    <%= partial 'partials/perfect_audience' %>

    <!-- Ivy -->
    <script type="text/javascript">(function() {var fl = document.createElement('script'); fl.type = 'text/javascript'; fl.async = true;fl.src = document.location.protocol + '//filamentapp.s3.amazonaws.com/ad51f3e2549d3aeb74d7aa6352c881a9.js';var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(fl, s);})();</script>
  <% end %>
</body>
</html>