---
title: "SaaS Growth/Churn Forecast | SaaS Calculator | Stripe Analytics"
priority: 1
changefreq: daily
layout: false
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title><%= current_page.data.title || "HookFeed" %></title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Always force latest IE rendering engine or request Chrome Frame -->
  <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

  <%= stylesheet_link_tag  "application" %>
  <%= javascript_include_tag "tools/mrr_forecast_app/app" %>

  <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
  <!--[if lt IE 9]>
    <script src="../assets/js/html5shiv.js"></script>
  <![endif]-->

  <!-- TypeKit -->
  <script type="text/javascript" src="//use.typekit.net/qee5bpm.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

  <%= partial 'partials/segment_io' %>
</head>

<body id="page_layout" class="<%= page_classes %>">
  <section id="header_bar_banner">
    <div id="header_bar" class="container">
      <div class="sixteen columns">
        <div id="logo">
          <a href="/"><img src="https://d2uerwjzv5u4r9.cloudfront.net/HookFeed_Logo_Light.png" width="150"></a>
        </div>
        <nav>
          <%= link_to 'Features', '/' %>
          <%= link_to 'Resources', '/hookfeed-university' %>
          <%= link_to 'Blog', '/blog' %>
          <%= link_to 'Login', "#{(development?) ? 'http' : 'https'}://secure.hookfeed.#{(development?) ? 'dev' : 'com'}/login" %>
        </nav>
      </div><!-- END .sixteen.columns -->
    </div><!-- END #header_bar.container -->
  </section><!-- END #header_bar_banner -->



  <script type="text/x-handlebars">
    {{outlet}}
  </script>



  <script type="text/x-handlebars" data-template-name="plans">
    <section id="mrr_forecast_banner">
      <div id="mrr_forecast" class="container">


        {{#each itemController="plan"}}
          <div class="plan four columns" {{bind-attr class="isEditing:editing"}}>
            {{#if isEditing}}
              {{input type="text" value=name}}
              {{input type="number" value=customer_count}}
              {{input type="number" value=amount}}
              {{input type="number" value=interval_count}}
              {{input type="text" value=interval}}
              {{input type="number" value=growth_rate}}%
              {{input type="number" value=churn_rate}}%
              {{input type="text" value=starts_on}}
              <button {{action "removePlan"}} class="destroy">Remove</button>
              <button {{action "savePlan"}} class="save">Save Plan</button>
            {{else}}
              {{name}}
              <button {{action "editPlan"}} class="edit">Edit Plan</button>
            {{/if}}
          </div>
        {{/each}}

        <div class="plan four columns" {{bind-attr class="isAdding:adding"}}>
          {{#if isAdding}}
            {{input type="text" value=newName placeholder="Plan Name"}}
            {{input type="number" value=newCustomer_count}}
            {{input type="number" value=newAmount}}
            {{input type="number" value=newInterval_count}}
            {{input type="text" value=newInterval placeholder="day, week, month, year"}}
            {{input type="number" value=newGrowth_rate}}%
            {{input type="number" value=newChurn_rate}}%
            {{input type="text" value=newStarts_on}}
            <button {{action "createPlan"}} class="create">Save Plan</button>
          {{else}}
            <button {{action "addPlan"}} class="add">Add Plan</button>
          {{/if}}
        </div>


      </div>
    </section>
  </script>

</body>
</html>